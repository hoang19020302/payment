FROM dunglas/frankenphp:latest

# Làm việc tại thư mục ứng dụng
WORKDIR /app

# Copy toàn bộ mã nguồn
COPY . .

# Cài composer nếu chưa có
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Cài đặt PHP extensions nếu cần
RUN install-php-extensions pcntl bcmath sockets

# Cài đặt Laravel dependencies
RUN composer install --no-interaction --prefer-dist --optimize-autoloader

# Laravel permissions
RUN chown -R www-data:www-data /app/storage /app/bootstrap/cache

# Tùy chọn: copy .env nếu bạn có sẵn
# COPY .env .env

# Khởi động Laravel Octane bằng FrankenPHP
CMD ["php", "artisan", "octane:frankenphp", "--host=0.0.0.0", "--port=8000"]
